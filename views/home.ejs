<%- include('header.ejs') %>


<div class="offers">
  <div id="carouselControls" class="carousel slide" data-ride="carousel" data-interval="3000">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="/gallery/pic-2.jpg" alt="Second slide" />
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/gallery/pic-3.jpg" alt="Third slide" />
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/gallery/pic-4.jpg" alt="Second slide" />
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/gallery/pic-5.jpg" alt="Second slide" />
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/gallery/pic-6.jpg" alt="Second slide" />
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="products">
  <div class="container">
    <div class="shirts product-type">
      <h1 class="heading">Shirts</h1>
      <%if(locals.shirts){%>
      <% for(let i=0;i<4 && i<shirts.length;i++){%>
      <div class="item">
        <img src="/gallery/<%=shirts[i].image%>" alt="Image of shirt">
        <div class="item-details">
          <p class="name"><%=shirts[i].name%></p>
          <div class="item-price row">
            <p class="price col-3">₹<%=shirts[i].price%></p>
            <p class="original-price col-3">₹<%=shirts[i].price+600%></p>
          </div>
        </div>
        <div class="hidden_forms">
          <form action="/addToWishlist" method="post">
            <!-- Add your product ID input field inside the form -->
            <input type="hidden" name="productId" value="<%=shirts[i].id%>">
            <!-- Add other form fields if needed -->

            <button type="submit" class="wishlist btn btn-primary btn-sm">Add to wishlist</button>
          </form>

          <form action="/addToCart" method="post">
            <!-- Add your product ID input field inside the form -->
